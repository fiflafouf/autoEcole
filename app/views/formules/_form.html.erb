<%= simple_form_for(@formule) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :id %>
    <%= f.input :description %>
    <%= f.input :price %>
    <%= f.input :nbTicket %>
    <%= f.input :priceTicket %>
    <%= f.input :user_id %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
