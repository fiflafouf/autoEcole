<h1>Listing Lecon Types</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lecon_types.each do |lecon_type| %>
      <tr>
        <td><%= lecon_type.name %></td>
        <td><%= link_to 'Show', lecon_type %></td>
        <td><%= link_to 'Edit', edit_lecon_type_path(lecon_type) %></td>
        <td><%= link_to 'Destroy', lecon_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

